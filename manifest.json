{
    "name": "Qanairy IDE",
    "version": "0.0.1",
    "description": "Allows recording custom tests for the Qanairy.com platform",
    "permissions": ["declarativeContent", "storage", "webNavigation", "tabs", "activeTab","webRequest","webRequestBlocking","https://*.qanairy.com/*"],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/qanairy_logo.png",
        "32": "images/qanairy_logo.png",
        "48": "images/qanairy_logo.png",
        "128": "images/qanairy_logo.png"
      }
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["content_script.js"]
        }
    ],
    "web_accessible_resources": [
      "recorder.html"
    ],
    "icons": {
      "16": "images/qanairy_logo.png",
      "32": "images/qanairy_logo.png",
      "48": "images/qanairy_logo.png",
      "128": "images/qanairy_logo.png"
    },
    "content_security_policy": "script-src 'self' https://cdn.auth0.com/client/mMomHg1ZhzZkM4Tsz2NGkdJH3eeJqIq6.js; object-src 'self'",
    "manifest_version": 2
}
