{
    "name": "Qanairy IDE",
    "version": "0.0.1",
    "description": "Allows recording custom tests for the Qanairy.com platform",
    "permissions": ["declarativeContent", "storage", "webNavigation", "tabs", "activeTab", "https://*.qanairy.com/*"],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_icon": {
        "16": "images/qanairy_logo.png",
        "32": "images/qanairy_logo.png",
        "48": "images/qanairy_logo.png",
        "128": "images/qanairy_logo.png"
      }
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["content_script.js"]
        }
    ],
    "icons": {
      "16": "images/qanairy_logo.png",
      "32": "images/qanairy_logo.png",
      "48": "images/qanairy_logo.png",
      "128": "images/qanairy_logo.png"
    },
    "options_page": "options.html",
    "manifest_version": 2
}
