{
    "name": "Qanairy IDE",
    "version": "0.0.1",
    "description": "Allows recording custom tests for the Qanairy.com platform",
    "permissions": ["declarativeContent", "storage", "webNavigation"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/qanairy_logo.png",
        "32": "images/qanairy_logo.png",
        "48": "images/qanairy_logo.png",
        "128": "images/qanairy_logo.png"
      }
    },
    "icons": {
      "16": "images/qanairy_logo.png",
      "32": "images/qanairy_logo.png",
      "48": "images/qanairy_logo.png",
      "128": "images/qanairy_logo.png"
    },
    "options_page": "options.html",
    "manifest_version": 2
}
